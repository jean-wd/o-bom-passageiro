<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.edu.ufabc.padm.jean.obompassageiro.ShareFragment"
    android:padding="@dimen/activity_horizontal_margin">

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/share_enable"
        android:id="@+id/share_switch"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/share_info"
        android:id="@+id/tv_info_share"
        android:lines="3"
        android:layout_below="@+id/share_switch"
        android:layout_alignLeft="@+id/share_switch"
        android:layout_alignStart="@+id/share_switch"
        android:layout_alignRight="@+id/share_switch"
        android:layout_alignEnd="@+id/share_switch" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_share"
        android:layout_below="@+id/tv_info_share"
        android:layout_alignLeft="@+id/tv_info_share"
        android:layout_alignStart="@+id/tv_info_share"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
